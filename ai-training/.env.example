# Have I Been Rekt AI Training API - Environment Configuration

# API Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=INFO

# Data Source API Keys (Required for full functionality)
HIBP_API_KEY=your_hibp_api_key_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
CHAINALYSIS_API_KEY=your_chainalysis_api_key_here

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Database Configuration (if using database instead of files)
DATABASE_URL=postgresql://user:password@localhost:5432/hibr_ai
DATABASE_POOL_SIZE=10

# Security Configuration
SECRET_KEY=your-secret-key-here-generate-a-secure-one
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST=20

# ML Model Configuration
MODEL_DIR=./models
ENABLE_ML_SCORING=true
ML_MODEL_TIMEOUT=30

# Data Storage Paths
CACHE_DIR=./cache
DATA_DIR=./data
LOGS_DIR=./logs

# Monitoring and Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# External Service URLs
GRAPHSENSE_API_URL=https://api.graphsense.info
BLOCKCHAIR_API_KEY=your_blockchair_key

# Feature Flags
ENABLE_BATCH_ANALYSIS=true
ENABLE_DEEP_ANALYSIS=true
ENABLE_ATTRIBUTION=true
ENABLE_CRIME_HISTORY=true

# Performance Tuning
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=30

# Backup and Data Retention
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=your-backup-bucket
DATA_RETENTION_DAYS=90